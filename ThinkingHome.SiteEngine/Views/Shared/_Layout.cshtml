@using ThinkingHome.SiteEngine.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>
    @(Navigation.GetItems(Context.Request).FirstOrDefault(item => item.selected)?.content ?? ViewBag.Title)
    &ndash; ThinkingHome.System
  </title>

  <link href="~/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="~/css/font-awesome.min.css" rel="stylesheet"/>
  <link href="~/css/highlight.css" rel="stylesheet"/>
  <link href="~/css/site.css" rel="stylesheet"/>
</head>
<body>
<div class="container">
  <div class="row ths-site-header">
    <div class="col-md-4">
      <a class="ths-logo" href="@Url.Action("Index", "Home")">
        <span class="ths-brand-name">Thinking-Home.</span><span class="ths-product-name">System</span>
      </a>

      <a class="btn btn-default pull-right hidden-md hidden-lg js-btn-menu">
        <i class="fa fa-2x fa-bars"></i>
      </a>
    </div>
    <div class="col-md-8 hidden-sm hidden-xs js-menu">
      <ul class="nav nav-pills pull-right">
        @foreach (var item in Navigation.GetItems(Context.Request))
        {
            var cssClass = item.selected ? "active" : "";

            <li class="@cssClass">
              <a href="@item.url">@item.content</a>
            </li>
        }
        <li class="nav-download">
          <a href="https://yadi.sk/d/1zMwjNt-34Sy5F" target="_blank">
            <span class="fa fa-fw fa-download"></span> Скачать
          </a>
        </li>
      </ul>
    </div>
  </div>

  @RenderBody()
  <hr/>
  <footer>
    <p>&copy; 2013 &ndash; @DateTime.Now.Year Thinking-Home.RU</p>
  </footer>
</div>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.js"></script>
<script src="~/js/highlight.js"></script>
<script>
    hljs.initHighlightingOnLoad();

    $(function() { $('.js-btn-menu').click(function() { $('.js-menu').toggleClass('opened-nav-menu'); }); });
</script>
</body>
</html>